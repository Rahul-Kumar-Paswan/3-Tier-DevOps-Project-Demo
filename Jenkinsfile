pipeline {
    agent any

    environment {
        BRANCH_NAME = "${env.BRANCH_NAME}"
    }

    stages {
        stage('Preparation') {
            steps {
                echo "üì¶ Branch Name: ${BRANCH_NAME}"
            }
        }

        stage('Trigger Check') {
            when {
                expression { BRANCH_NAME == 'dummy-1' }
            }
            steps {
                echo "‚úÖ This pipeline was triggered by a merge into 'dummy' branch."
            }
        }

        stage('Do Nothing') {
            when {
                not {
                    branch 'dummy'
                }
            }
            steps {
                echo "‚õîÔ∏è Not 'dummy' branch ‚Äî no further steps will run."
            }
        }
    }

    post {
        success {
            echo "‚úÖ Pipeline execution completed successfully!"
        }
        failure {
            echo "‚ùå Pipeline failed."
        }
    }
}
